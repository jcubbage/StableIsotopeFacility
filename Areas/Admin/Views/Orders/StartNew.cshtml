@model List<SIFCore.Models.Contacts>

<form asp-action="Create">
<div class="container col-sm-12">    
    <div class="row">
        <div class="col-sm-12">
            <h2>Start New Order Record</h2> 
        </div>            
    </div> 
    <div class="row">
         <div class="col-sm-12">
            <div asp-validation-summary="All" class="text-danger"></div>            
            <a class="btn btn-dark" asp-action="Index" >Cancel</a>
        </div>  
    </div>     
    <div class="row">
        <div class="col-md-6 col-xl-4"> @* First column *@           
           <div class="form-group row">
               <label for="id"  class="col-sm-3 col-form-label">Select Contact</label>
               <select id="id" name="id"  class="col-sm-3 form-control" asp-items="@(new SelectList(Model, "Id", "FullNameLastFirst"))"></select>
           </div> 
           <div class="form-group row">
               <input type="submit" value="Continue" class="btn btn-primary">
           </div>
           <div><hr></div>        
           <div class="form-group row">
               <label class="col-sm-3 col-form-label">Create new contact</label>
               <a asp-action="New" asp-controller="Contacts" class="btn btn-info">New</a>
           </div>           
        </div>
    </div>
</div>
</form>