@model SIFCore.Models.BillingAddresses;


<h2>Billing Address Edit</h2> 
<form asp-action="BillingEdit">
    @Html.HiddenFor(x => x.Id)
<div class="container col-lg-5">     
    <div class="row">        
        <a asp-action="ShippingDetails" class="btn btn-info" asp-route-id="@Model.Id">Cancel</a> | 
        <a asp-action="Index" asp-area="client" asp-controller="Address" class="btn btn-info">Back to List</a>
    </div> 
    <div class="row">
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
    <div class="form-group row required">
        <label asp-for="AddressName" class="col-sm-3 col-form-label"></label>        
        <input asp-for="AddressName" class="col-sm-9 form-control">        
    </div>
    <div class="form-group row">
        <label asp-for="Institution" class="col-sm-3 col-form-label"></label>
        <input asp-for="Institution" class="col-sm-9 form-control">
    </div>    
    <div class="form-group row">
        <label asp-for="Department" class="col-sm-3 col-form-label"></label>
        <input asp-for="Department" class="col-sm-9 form-control">
    </div>
    <div class="form-group row required">
        <label asp-for="ContactFirstName" class="col-sm-3 col-form-label"></label>
        <input asp-for="ContactFirstName" class="col-sm-9 form-control">
    </div>
    <div class="form-group row required">
        <label asp-for="ContactLastName" class="col-sm-3 col-form-label"></label>
       <input asp-for="ContactLastName" class="col-sm-9 form-control">
    </div>
    <div class="form-group row required">
        <label asp-for="BillingEmailAddress" class="col-sm-3 col-form-label"></label>
        <input asp-for="BillingEmailAddress" class="col-sm-9 form-control">
    </div>
    <div class="form-group row">
        <label asp-for="BillingFax" class="col-sm-3 col-form-label"></label>
        <input asp-for="BillingFax" class="col-sm-9 form-control">
    </div>
    <div class="form-group row required">
        <label asp-for="BillingPhone" class="col-sm-3 col-form-label"></label>
        <input asp-for="BillingPhone" class="col-sm-9 form-control">
    </div>
    <div class="form-group row required">
        <label asp-for="Address1" class="col-sm-3 col-form-label"></label>
        <input asp-for="Address1" class="col-sm-9 form-control">
    </div>
    <div class="form-group row">
        <label asp-for="Address2" class="col-sm-3 col-form-label"></label>
        <input asp-for="Address2" class="col-sm-9 form-control">
    </div>
    <div class="form-group row">
        <label asp-for="Address3" class="col-sm-3 col-form-label"></label>
        <input asp-for="Address3" class="col-sm-9 form-control">
    </div>
    <div class="form-group row required">
        <label asp-for="City" class="col-sm-3 col-form-label"></label>
        <input asp-for="City" class="col-sm-9 form-control">
    </div>
    <div class="form-group row">
        <label asp-for="State" class="col-sm-3 col-form-label"></label>
        <input asp-for="State" class="col-sm-9 form-control">
    </div>
    <div class="form-group row">
        <label asp-for="ZipCode" class="col-sm-3 col-form-label"></label>
        <input asp-for="ZipCode" class="col-sm-9 form-control">
    </div>
    <div class="form-group row required">
        <label asp-for="Country" class="col-sm-3 col-form-label"></label>
        <input asp-for="Country" class="col-sm-9 form-control">
    </div>
    <div class="form-group row required">
        <label asp-for="FedIDNum" class="col-sm-3 col-form-label"></label>
        <input asp-for="FedIDNum" class="col-sm-9 form-control">
    </div>
    <div class="row">
        <input type="submit" value="Update" class="btn btn-primary"> | 
        <a asp-action="ShippingDetails" class="btn btn-info" asp-route-id="@Model.Id">Cancel</a> | 
        <a asp-action="Index" asp-area="client" asp-controller="Address" class="btn btn-info">Back to List</a>
    </div>
</div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
