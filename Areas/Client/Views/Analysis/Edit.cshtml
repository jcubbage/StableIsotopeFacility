@using System.ComponentModel.DataAnnotations
@using SIFCore.Helpers;
@model SIFCore.Models.AnalysisViewModel

@{
	ViewBag.Title = "Edit";
}

<h2>Edit analysis for @Model.Order.ProjectName</h2>
<form asp-action="Edit">
<div class="container col-lg-5">
    @{await Html.RenderPartialAsync("_FormPartial", @Model);}
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save changes</button>
        <a asp-action="Details" asp-controller="Order" asp-route-id="@Model.Order.Id" class="btn btn-danger">Cancel</a>
    </div>
</div>
</form>


@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
     <script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.12.1/jquery-ui.js"></script>   
    
     <script type="text/javascript">
        $(document).ready(function () {
            $('.datepicker').datepicker({
                dateFormat: "mm-dd-yy",
            });
        });
    </script>
}


