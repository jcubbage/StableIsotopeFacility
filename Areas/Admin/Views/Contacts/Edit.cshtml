@model SIFCore.Models.Contacts


<h2>Edit Contact</h2> 

<form asp-action="Edit"> 
    <input type="hidden" asp-for="Id">
    <div class="container col-lg-10">
        <div class="row">             
            <div asp-validation-summary="All" class="text-danger"></div>            
        </div>
        <div class="form-group row required">
            <label asp-for="FirstName" class="col-sm-3 col-form-label"></label>
            <input type="text" class="col-sm-6 form-control" asp-for="FirstName">                       
            <span class="field-validation-valid text-danger" data-valmsg-for="FirstName" data-valmsg-replace="true"></span>                   
        </div> 
        <div class="form-group row required">
            <label asp-for="LastName" class="col-sm-3 col-form-label"></label>
            <input type="text" class="col-sm-6 form-control" asp-for="LastName">                       
            <span class="field-validation-valid text-danger" data-valmsg-for="LastName" data-valmsg-replace="true"></span>                
        </div>
        <div class="form-group row required">
            <label asp-for="Email" class="col-sm-3 col-form-label"></label>
            <input type="text" class="col-sm-6 form-control" asp-for="Email">                       
            <span class="field-validation-valid text-danger" data-valmsg-for="Email" data-valmsg-replace="true"></span>                
        </div>
        <div class="form-group row">
            <label asp-for="Phone" class="col-sm-3 col-form-label"></label>
            <input type="text" class="col-sm-6 form-control" asp-for="Phone">                       
            <span class="field-validation-valid text-danger" data-valmsg-for="Phone" data-valmsg-replace="true"></span>                
        </div>
        <div class="row">
            <input type="submit" value="Update Contact" class="btn btn-primary"></input> | 
            <a class="btn btn-dark" asp-action="Index" asp-controller="Orders">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.12.1/jquery-ui.js"></script>   
    
    
}